@import '../../stylesheets/libs/mixins'
@import '../../stylesheets/libs/stybr'

html, body
  margin 0
  width 100%
  height 100%
  background-color #000
  overflow hidden

#grid-layer
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  overflow hidden
  .grid-row
    float-wrapper()
    width 1000%
    .grid
      float left
      opacity .05
      border-radius 100%
      transition opacity 2s
      &:hover
        opacity 1
        transition opacity .05s
      &.bright
        opacity 1 !important
